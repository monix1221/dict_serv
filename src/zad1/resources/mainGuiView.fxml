<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="zad1.client.MainGuiController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <children>
        <VBox alignment="CENTER" prefHeight="240.0" prefWidth="360.0">
            <children>
                <HBox prefHeight="50.0" prefWidth="200.0">
                    <children>
                        <VBox prefHeight="50.0" prefWidth="253.0">
                            <children>
                                <ComboBox fx:id="langChooserComboBox" onAction="#comboBoxOnActionEvent" prefWidth="100.0" promptText="en">
                                    <VBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </VBox.margin>
                                </ComboBox>
                                <TextField fx:id="wordToTranslateTextField" prefWidth="150.0" promptText="kot">
                                    <VBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
                                    </VBox.margin>
                                </TextField>
                            </children>
                        </VBox>
                        <VBox prefHeight="50.0" prefWidth="217.0">
                            <children>
                                <TextField fx:id="portTextField" prefHeight="25.0" prefWidth="120.0" promptText="port 49152-65535">
                                    <VBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="46.0" />
                                    </VBox.margin>
                                </TextField>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox prefHeight="50.0" prefWidth="200.0">
                    <children>
                        <TextField fx:id="resultTranslation" editable="false" prefHeight="25.0" prefWidth="312.0" promptText="-- translation --">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="15.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                </HBox>
                <HBox prefHeight="50.0" prefWidth="200.0">
                    <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#translate" prefHeight="50.0" prefWidth="100.0" text="Translate" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
